<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_departure_wizard_view_form_inherit_archive" model="ir.ui.view">
        <field name="name">hr.departure.wizard.view.form.extend</field>
        <field name="model">hr.departure.wizard</field>
        <field name="inherit_id" ref="hr.hr_departure_wizard_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_register_departure']" position="replace">
                <button name="action_register_departure_update" string="Apply" type="object" class="oe_highlight" data-hotkey="q"/>
            </xpath>
        </field>
    </record>
</odoo>
